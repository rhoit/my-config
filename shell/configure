#!/bin/bash
set -e

link="https://raw.github.com/git/git/master/contrib/completion/git-prompt.sh"
if [[ ! -e /usr/share/git/git-prompt.sh ]]; then
    wget -c $link -O /tmp/git-prompt.sh
fi

link="showterm.io/showterm"
if [[ ! -e shellrc.d/_showterm.func ]]; then
    wget $link -O /tmp/showterm
    awk 'BEGIN {print "function showterm() {"};
         {print "    " $0};
         END { print "}"}' /tmp/showterm > shellrc.d/_showterm.func
fi

echo "Checking: dependencies"
list="cowsay fortune git mktemp script tput curl"
for item in $list; do
    echo -ne "\t"
    type $item
done
