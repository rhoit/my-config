configuration {
    modi        : "run,window,drun,keys,ssh";
    font        : "inconsolata 16";
    combi-modi  : "run,drun,window";
    show-icons  : true;
    icon-theme  : "Papirus";
    terminal    : "xfce4-terminal";
    ssh-command : "{terminal} --command 'mosh {host} tmux a'";
}


// https://github.com/davatorium/rofi/blob/next/doc/rofi-theme.5.markdown

@theme "Arc-Dark"

element-icon {
    size    : 2ch;
    padding : 0 0.5ch;
}
